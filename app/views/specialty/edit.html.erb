<center>
  <a href="/departments/<%= @specialty.department_id %>" id="back" class="action-button shadow animate blue" style="margin-bottom: 100%">Назад</a>
</center>
<div class="container">
  <div class="form-container front" style="margin-top: 5%">
    <h1 class="form-label">Редактирование специальности</h1>
    <%= form_for @specialty do |f| %>
        <div class="group">
          <%= f.text_field :name %>
          <span class="highlight"></span>
          <span class="bar"></span>
          <label>Название специальности</label>
          <select name="department">
            <% @department.each do |d| %>
                <option value="<%= d.id %>"><%= d.name %></option>
            <% end %>
          </select>
        </div>
        <%= f.submit "Изменить специальность", class:"button raised btn btn-primary btn-lg" %>
    <% end %>
  </div>
</div>