<div class="container">
  <div class="form-container front">
    <h1 class="form-label">Добавление группы</h1>
    <%= form_for @group do |f| %>
        <div class="group">
          <p>Номер группы</p>
          <%= f.text_field :number %>
          <span class="highlight"></span>
          <span class="bar"></span>
          <p>Название специальности</p>
          <select name="id">
            <% @department.each do |department| %>
              <% department.specialties.each do |s| %>
                  <option value="<%= s.id %>"><%= s.name %>(<%= department.name %>)</option>
              <% end %>
            <% end %>
          </select>
          <span class="highlight"></span>
          <span class="bar"></span>
        </div>
        <%= f.submit "Добавить группу", class:"button raised btn btn-primary btn-lg" %>
    <% end %>
  </div>
</div>