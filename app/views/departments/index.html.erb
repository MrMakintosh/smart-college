<h1>Редактирование списков</h1>
<table align="center">
  <tr>
    <td>
      <a href="<%=  %>#" id="departments-link" class="action-button shadow animate blue">Отделения</a>
    </td>
    <td>
      <a href="<%=  %>#" id="specialties-link" class="action-button shadow animate blue">Специальности</a>
    </td>
    <td>
      <a href="<%=  %>#" id="groups-link" class="action-button shadow animate blue">Группы</a>
    </td>
    <td>
      <a href="<%=  %>#" id="students-link" class="action-button shadow animate blue">Студенты</a>
    </td>
  </tr>
</table>
<div id="departments">
  <h1 align="center">Отделения</h1>
  <table border="0" align="center">
    <% @department.each do |department| %>
        <tr>
          <td>
            <div style="background-color: lavender">
                <h2><%= link_to department.name, department_path(department) %></h2>
            </div>
          </td>
          <td>
            <a href="#" class="action-button shadow animate yellow">Редактировать</a>
            <a href="#" class="action-button shadow animate red">Удалить</a>
          </td>
        </tr>
    <% end %>
  </table>
</div>
<!-- Specialties -->
<div id="specialties">
  <h1 align="center">Специальности</h1>
  <table border="0" align="center">
    <% @department.each do |department| %>
        <h2 align="center"><%= department.name %></h2>
        <% department.specialties.each do |specialty| %>
          <tr>
            <td>
              <div style="background-color: lavender">
                <h2><%= link_to specialty.name, specialty_index_path(specialty) %></h2>
              </div>
            </td>
            <td>
              <a href="#" class="action-button shadow animate yellow">Редактировать</a>
              <a href="#" class="action-button shadow animate red">Удалить</a>
            </td>
          </tr>
        <% end %>
    <% end %>
  </table>
</div>
<!-- Groups -->
<div id="groups">
  <h1 align="center">Группы</h1>
  <table border="0" align="center">
    <% @department.each do |department| %>
        <% department.specialties.each do |specialty| %>
            <% specialty.groups.each do |group| %>
              <tr>
                <td>
                  <div style="background-color: lavender">
                    <h2><%= link_to group.number, group_index_path(group) %></h2>
                  </div>
                </td>
                <td>
                  <a href="#" class="action-button shadow animate yellow">Редактировать</a>
                  <a href="#" class="action-button shadow animate red">Удалить</a>
                </td>
              </tr>
            <% end %>
        <% end %>
    <% end %>
  </table>
</div>
<!-- Students -->
<div id="students">
  <h1 align="center">Студенты</h1>
  <table border="0" align="center">
    <% @department.each do |department| %>
        <% department.specialties.each do |specialty| %>
            <% specialty.groups.each do |group| %>
                <% group.students.each do |student| %>
                  <tr>
                    <td>
                      <div style="background-color: lavender">
                        <h2><%= link_to "#{student.name} #{student.surname} #{student.fathername}", student_index_path %></h2>
                      </div>
                    </td>
                    <td>
                      <a href="#" class="action-button shadow animate yellow">Редактировать</a>
                      <a href="#" class="action-button shadow animate red">Удалить</a>
                    </td>
                  </tr>
                <% end %>
            <% end %>
        <% end %>
    <% end %>
  </table>
</div>
<script>
    $(document).ready(function(){
        $("#specialties").hide();
        $("#groups").hide();
        $("#students").hide();
        $("#departments-link").on("click", function (){
            $("#departments").show();
            $("#specialties").hide();
            $("#groups").hide();
            $("#students").hide();
            return false;
        });
        $("#specialties-link").click(function (){
            $("#departments").hide();
            $("#specialties").show();
            $("#groups").hide();
            $("#students").hide();
            return false;
        });
        $("#groups-link").on("click", function (){
            $("#departments").hide();
            $("#specialties").hide();
            $("#groups").show();
            $("#students").hide();
            return false;
        });
        $("#students-link").on("click", function (){
            $("#departments").hide();
            $("#specialties").hide();
            $("#groups").hide();
            $("#students").show();
            return false;
        });
    });
</script>